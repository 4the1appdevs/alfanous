<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" >
        <shape>
            <solid
                android:color="#ffffff" />
            <stroke
                android:width="1dp"
                android:color="#ccc" 
               />
            <corners
                android:topLeftRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:topRightRadius="0dp"
                android:bottomRightRadius="0dp"/>
            <padding
                android:left="10dp"
                android:top="7dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#ffffFf" />
            <stroke
                android:width="1dp"
                android:color="#ccc"  />
            <corners
                android:topLeftRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:topRightRadius="0dp"
                android:bottomRightRadius="0dp"/>
            <padding
                android:left="10dp"
                android:top="7dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>